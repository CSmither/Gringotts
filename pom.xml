<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.oglofus</groupId>
    <artifactId>gringotts</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <modules>
        <module>api</module>
        <module>bukkit</module>
        <module>sponge</module>
    </modules>
    <packaging>pom</packaging>

    <name>Gringotts</name>
    <description>
        Gringotts is an item-based economy plugin for the Bukkit Minecraft server platform. Unlike earlier economy
        plugins, all currency value and money transactions are based on actual items in Minecraft, per default emeralds.
    </description>
    <url>https://gringotts.oglofus.com</url>

    <properties>
        <java.version>1.8</java.version>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <scm>
        <url>https://github.com/nikosgram/Gringotts</url>
        <connection>scm:git:git@github.com:nikosgram/Gringotts.git</connection>
        <developerConnection>scm:git:git@github.com:nikosgram/Gringotts.git</developerConnection>
    </scm>

    <issueManagement>
        <system>GitHub</system>
        <url>https://github.com/nikosgram/Gringotts/issues</url>
    </issueManagement>

    <repositories>
        <repository>
            <id>sk89q-repo</id>
            <url>http://maven.sk89q.com/repo/</url>
        </repository>
    </repositories>

    <dependencies>
        <dependency>
            <groupId>org.jetbrains</groupId>
            <artifactId>annotations</artifactId>
            <version>17.0.0</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>
</project>
